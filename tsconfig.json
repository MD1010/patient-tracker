{
  "compilerOptions": {
    "target": "ES2022", // Set to the latest needed target
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"], // Include all necessary libs
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "src/lib/utils.ts",
    "src/main.tsx",
    "vite.config.ts",
  ]
}
